{
    "problemMatcher": [
        {
            "owner": "bicep",
            "pattern": [
                {
                    "regexp": "^(.+)\\((\\d+),(\\d+)\\)\\s:\\s(Error|Warning|Info)\\s(.+):\\s(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "code": 5,
                    "message": 6
                }
            ]
        }
    ]
}